<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp">

    <include layout="@layout/view_camera_and_title"/>

    <TextView
        android:text="@string/crime_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crime_details"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/crime_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/crime_date"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:elevation="8dp"
            android:layout_weight="1"/>

        <CheckBox
            android:text="@string/crime_solved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/crimeSolved"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/crime_suspect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/choose_suspect"/>

        <Button
            android:text="@string/crime_report_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/send_report"/>


    </LinearLayout>

</LinearLayout>